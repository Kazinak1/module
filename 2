#include <ctype.h>
#include <cs50.h>
#include <stdio.h>
#include <string.h>

int main(void)
{
    string String = get_string("Текст: ");
    int words = 1;
    int l = strlen(String);

    int i = 0;

    for (i = 0; l > i; i++)
    {
        if (String[i] == ' ')
        {
            if (String[i + 1] == ' ')
            {
                continue;
            }

            words++;
        }

    }
    printf("Количество слов: %i\n", words);
}
